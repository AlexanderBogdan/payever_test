{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        "@AppBundle/Resources/public/scss/style.scss"
        filter="scssphp"
        output="css/style.css"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div id="app"></div>
    <script type="text/template" id="app-layout-template">
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li><a href="#" class="home">Home</a></li>
                </ul>
            </div>
        </nav>
        <section id="content" class="container"></section>
    </script>
    <script type="text/template" id="album-item-view-template">
        <h4 class="text-center"><a href="#" data-album-id="<%- id %>"><%- title %></a></h4>
    </script>
    <script type="text/template" id="album-item-detail-view-template">
        <h1><%- title %></h1>
        <p><%- description %></p>
    </script>
    <script type="text/template" id="album-detail-layout-view-template">
        <div id="album-detail"></div>
        <div id="album-images"></div>
        <div id="album-pager"></div>
    </script>
    <script type="text/template" id="image-item-view-template">
        <div class="thumbnail">
            <img src="<%- url %>" alt="<%- alt %>" title="<%- title %>">
            <div class="caption">
                <h4><%- title %></h4>
            </div>
        </div>
    </script>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.2/backbone-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.marionette/2.4.5/backbone.marionette.min.js"></script>
    {% javascripts
        '@AppBundle/Resources/public/js/boot.coffee'
        '@AppBundle/Resources/public/js/app/gallery/app.coffee'
        '@AppBundle/Resources/public/js/app/gallery/images/*.coffee'
        '@AppBundle/Resources/public/js/app/gallery/albums/*.coffee'
        filter='coffee'
        output='js/build.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        App.start();
    </script>
{% endblock %}
